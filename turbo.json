{
  "$schema": "https://turborepo.org/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "cache": true,
      "outputs": ["dist/**", ".next/**", "build/**"]
    },
    "dev": {
      "cache": false,
      "persistent": false
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "proto:gen": {
      "cache": false,
      "persistent": false
    },
    "db:migrate": {
      "cache": false,
      "persistent": false
    },
    "db:generate": {
      "cache": false,
      "persistent": true
    },
    "db:studio": {
      "cache": false,
      "persistent": true
    }
  }
}
